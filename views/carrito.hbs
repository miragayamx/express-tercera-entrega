<script>
    async function buyFunction(){
        await fetch(`/carrito/comprar`, {
            method: 'POST'
        });
    }
</script>
<div class="container">
    {{> nav-bar }}
    <h1 class="display-4 mb-3">Carrito</h1>
    {{#if existe}}
    <table class="table table-responsive table-dark table-striped" id='tabla'>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
        </thead>
        <tbody>
            {{#each lista}}
            <tr>
                <td>{{this.producto.title}}</td>
                <td>${{this.producto.price}}</td>
                <td><img height="80" src={{this.producto.thumbnail}} alt="#"></td>
                <td>
                    <button type="button" class="btn btn-primary">Remover</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
    <button type="button" class="btn btn-primary" onclick="buyFunction();">Comprar</button>
    {{else}}
    <div class="alert alert-info" role="alert">
        No se encontraron productos
    </div>
    {{/if}}
</div>